<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_launcher"/>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/task_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Run boy run"
                    android:textColor="@android:color/black"
                    android:layout_alignParentTop="true"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/task_description"
                    android:layout_below="@id/task_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I want to run over 100000 km and also i would like to swim trough the Bosfor."
                    android:textSize="20dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/task_description"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="50 coins"
                    />

                <TextView
                    android:id="@+id/task_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.08.1995"
                    android:layout_below="@id/task_description"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:textSize="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>